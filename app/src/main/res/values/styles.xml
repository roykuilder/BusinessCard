<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="border">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_line</item>
        <item name="android:background">@color/padding_color</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <style name="border_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_line</item>
        <item name="android:background">@color/padding_color</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
